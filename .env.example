# ── Copy this file to .env and adjust values ──────────────────────────────
# cp .env.example .env

# TiDB / MySQL
TIDB_HOST=tidb
TIDB_PORT=4000
TIDB_USER=root
TIDB_PASSWORD=
TIDB_DATABASE=social_feed

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_FEED_TTL=86400
REDIS_FEED_MAX_SIZE=500

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_NEW_POSTS=new-posts
KAFKA_TOPIC_IMPRESSIONS=impressions

# Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=posts
EMBEDDING_DIMENSION=384
EMBEDDING_MODEL=all-MiniLM-L6-v2

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=media

# Apache Pinot
PINOT_BROKER_HOST=pinot-broker
PINOT_BROKER_PORT=8099
PINOT_LOOKBACK_HOURS=24

# Ranking Service
RANKING_SERVICE_URL=http://ranking-service:8001
RANKING_CANDIDATE_LIMIT=100
FEED_PAGE_SIZE=20

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
SERVICE_NAME=api-service
ENVIRONMENT=development
